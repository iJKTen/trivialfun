<section>
  <h1 class="h3 mb-3 font-weight-normal">
    Showing accounts for <%= link_to @venue.name, admin_venues_path %>
  </h1>
  <p><%= link_to 'Create account', new_admin_venue_account_path(@venue) %></p>

  <%= render :partial => "/forms/flash" %>

  <% @users.each do |user| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= user.email %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= user.role %></h6>
        <%= link_to 'Edit account', edit_admin_venue_account_path(@venue, user), class: "card-link" %>
        <%= link_to 'Delete account', admin_venue_account_path(@venue, user),
          method: :delete,
          data: { confirm: 'Are you sure?' }, class: "card-link link-danger" %>
      </div>
    </div><br />
  <% end %>
</section>
