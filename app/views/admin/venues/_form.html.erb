<h1 class="h3 mb-3 font-weight-normal">
  Back to <%= link_to 'All Venues', admin_venues_path %>
</h1>

<% if @venue.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h2>
      <%= pluralize(@venue.errors.count, "error") %> prohibited this venue from being saved:
    </h2>
    <ul>
      <% @venue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @venue, url: [:admin, @venue], local: true do |form| %>
  <div class="card mb-3">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", required: "true" %>
      </div>
      <div class="form-group">
        <%= form.label :address %>
        <%= form.text_field :address, class: "form-control", required: "true" %>
      </div>
      <div class="form-group">
        <%= form.label :phone %>
        <%= form.telephone_field :phone, class: "form-control", required: "true" %>
      </div>
      <div class="form-group">
        <%= form.label :total_rounds_per_game %>
        <%= form.number_field :total_rounds_per_game, class: "form-control", required: "true" %>
      </div>
      <div class="form-group">
        <%= form.label :total_questions_per_round %>
        <%= form.number_field :total_questions_per_round, class: "form-control", required: "true" %>
      </div>
      <div class="form-group">
        <%= form.label :maximum_players_per_team %>
        <%= form.number_field :maximum_players_per_team, class: "form-control", required: "true" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
